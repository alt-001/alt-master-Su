#bottom-nav(ng-controller="loginCtrl")
  #goup
  .menu
    .menu-block.col-xs-4
      span.explore
        a(href='/explore') explore
      span.search
        a(href='/search') search
      span.showroom
        a(href='/showroom') showroom
    .menu-block.col-xs-4.text-center
      span.signin(ng-show="!identity.isAuthenticated()")
        a(href="/signup") Sign In
      span.login(ng-show="identity.isAuthenticated()")
        a(href="/account/love-products") {{identity.currentUser.firstName + " " + identity.currentUser.lastName}}
      span.mycart(ng-show="identity.isAuthenticated()")
        a(href="/account/cart") my cart
          i 2
      span.signout(ng-show="identity.isAuthenticated()")
        a(href="#", ng-click="signout()") Log Out
    .menu-block.hidden-xs.hidden-sm.col-md-4.col-lg-4.text-right
      span.follow(follow)
        a(href='#' target="_self") follow
      span.info
        a(href='/info') info
      span.language
        a.message(href='' data-toggle="modal" data-target="#myCn") 中文
  #myCn.modal.fade(tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true")
      .modal-dialog
        .modal-content
          .modal-header
            button.close(type="button" data-dismiss="modal")
              span(aria-hidden="true") &times;
              span.sr-only Close
            h4#myModalLabel.modal-title 中文版正在努力建设中
include partials/follow