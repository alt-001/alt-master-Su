include partials/account-top
.col-xs-3
  include partials/vip-sidebar
.col-xs-9
  #vipRecentNewsContent(ng-controller="accountCtrl")
    .top-bar
      .col-xs-4
        form(ng-model="vipSort")
          select 
            option(value="today") today
            option(value="this week") this week
            option(value="this month") this month
          select(onchange="location = this.options[this.selectedIndex].value;")
            option(value="/account/recentnews") connected
            option(value="/account/new-member") new member
      .col-xs-8
        h5.col-xs-5.other-profile  Back to Recent News
        form(ng-model="vipSearch")
          .col-xs-7.pull-right
            input.search(type='text' placeholder='Search').col-xs-10
            button(type="submit").addon.col-xs-2
              span.glyphicon.glyphicon-search 
    .updates
      .lists
        .col-xs-3.media-info
          .thumbnail(ng-repeat="person in rankedList") 
            img.media-object(ng-src='{{person.item.img}}')
            .caption
              h5.name
                a(href="/account/otherprofile-connected") {{person.item.name}}
              p.role
                {{person.item.role}}
        .col-xs-3.media-info
          .thumbnail(ng-repeat="person in rankedList | orderBy:'rank'") 
            img.media-object(ng-src='{{person.item.img}}')
            .caption
              h5.name
                a(href="/account/otherprofile-connected") {{person.item.name}}
              p.role
                {{person.item.role}}
              span.connection 
          p.duration
            | 1 day ago
        .col-xs-3.media-info
          .thumbnail(ng-repeat="person in rankedList2 | orderBy:'rank'") 
            img.media-object(ng-src='{{person.item.img}}')
            .caption
              h5.name
                a(href="/account/otherprofile-connected") {{person.item.name}}
              p.role
                {{person.item.role}}
        .col-xs-3.media-info
          .thumbnail(ng-repeat="product in product | orderBy:'rank'") 
            img.media-object(ng-src='{{product.img}}')
            .caption
              h5.name
                {{product.name}}
              p.role
                |{{product.brand}}
              span.likes
          p.duration
            | 1 day ago