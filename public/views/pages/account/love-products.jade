include partials/account-top
#products(ng-controller="productsCtrl" style="margin-top:60px;")
  ul(masonry)
    li.masonry-brick.col-xs-3(ng-repeat="product in likeProducts" hover-show)
      a(href='/product')
        img.product-cover.img-responsive(ng-src="{{product.image}}")
      .tag
        .col-xs-12
          .tag-info
            .col-xs-12
              .col-xs-10
                a(href='/product')
                 | {{product.name}}
              .col-xs-2.text-right
                a(href='#')
                  button.remove X
            .col-xs-12
              | {{product.price | currency: "Â£"}}
            .col-xs-12
              i(style="margin-right:5px;") from
              a(href='/brand/products/all')
               | {{product.brand}}
            .col-xs-12
              .col-xs-6
                  button.small-button Add to Cart
              .col-xs-6
                img.pull-right.love(src='/assets/images/lovely_icon.png')
                img.pull-right.share(src='/assets/images/share_icon.png' data-toggle="modal" data-target="#shareModal")
    include partials/share-btn