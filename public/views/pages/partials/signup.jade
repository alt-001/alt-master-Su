.signup-wrapper  
  #signup(style="display: none")
    .title SIGN UP
    .divider.with
    input.email(name='email' type='email' placeholder='EMAIL' required='required')
    input.password(name='password' type='password' placeholder='PASSWORD' required='required')
    input.submit(type='submit' value="GO")
    .divider.or
    .social
      a(href='#')
        img(src='/assets/images/signup_twitter.png')
      a(href='#')
        img(src='/assets/images/signup_facebook.png')
      a(href='#')
        img(src='/assets/images/signup_weibo.png')
      a(href='#')
        img(src='/assets/images/signup_pinterest.png')
    p
      | Already a member? Sign in 
      a here
      | .
    button.close
    .shadow

script.
  $("#signup").fadeIn(1000, 'easeOutExpo');
  $("#signup .close").click(function(){
    $(".signup-wrapper").fadeOut(1000, 'easeOutExpo');
  });
  $("#signup .submit").click(function(){
    $(".signup-wrapper").fadeOut(1000, 'easeOutExpo');
  });