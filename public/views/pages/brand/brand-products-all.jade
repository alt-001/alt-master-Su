.col-xs-3
  include partials/brand-sidebar
.col-xs-9
  #products(ng-controller="brandProductCtrl")
    ul(masonry)
      li.masonry-brick.col-xs-4.col-md-4(ng-repeat="product in products | orderBy:'-id'" hover-show)
        a(href='')
          img.product-cover.img-responsive(ng-src="{{product.image}}")
        .tag
          .col-xs-12
            .tag-info
              .col-xs-12
                a(href='')
                 | {{product.name}}
              .col-xs-12
                .col-xs-6
                  | {{product.price | currency: "Â£"}}
              .col-xs-12
                .col-xs-6
                  a(href='' data-toggle="modal" data-target="#reserveModal")
                    button.small-button Reserve
                .col-xs-6
                  img.pull-right.love(src='/assets/images/lovely_icon.png')
                  img.pull-right.share(src='/assets/images/share_icon.png' data-toggle="modal" data-target="#shareModal")
    include partials/share-btn
    #reserveModal.modal.fade(tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true")
        .modal-dialog
          .modal-content
            .modal-header
              button.close(type="button" data-dismiss="modal")
                span(aria-hidden="true") &times;
                span.sr-only Close
              h4#myModalLabel.modal-title Reserve a product
            .modal-body(style="padding-top:0;")
              h5#myModalLabel {{product.name}}
              input(type="text" placeholder="Title").col-xs-12
              input(type="text" placeholder="First Name").col-xs-12
              input(type="text" placeholder="Last Name").col-xs-12
              input(type="text" placeholder="Email address").col-xs-12
            .modal-footer
              button.btn.btn-default(type="button" data-dismiss="modal") close
              button.btn.btn-primary(type="button") Submit
script.
  var colors = ["#d1f1db","#f8d0d2","#dedede","#d1dff1","#f1efd1"];
  var rand = Math.floor(Math.random()*colors.length);
  $('#products').css("background-color", colors[rand]);