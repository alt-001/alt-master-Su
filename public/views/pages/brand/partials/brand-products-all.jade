#products(ng-controller="productsCtrl")
  ul(masonry)
    li.masonry-brick.col-xs-4.col-md-4(ng-repeat="product in products | orderBy: sort |  filter:productsFilterService.activeFilters" hover-show)
      a(href='/product')
        img.product-cover.img-responsive(ng-src="{{product.image}}")
      .tag
        .col-xs-2
          .tag-trigger
            img(src='/assets/images/tag.png')
          .clearfix
        .col-xs-10
          .tag-info
            .col-xs-12
              a(href='/product')
               | {{product.name}}
            .col-xs-12
              .col-xs-6  
                 | {{product.price | currency: "Â£"}}
            .col-xs-12
              .col-xs-6
                  button.small-button Add to Cart
              .col-xs-6
                img.pull-right.love(src='/assets/images/lovely_icon.png')
                img.pull-right.share(src='/assets/images/share_icon.png')
            .clearfix