#product-details
  font-family 'PT Sans' 'Source Sans Pro'
  background-color #f6f6f6
  padding 10px 45px 45px
  color #929292
  position fixed
  height 100%
  overflow scroll
  a 
    color black
    &:hover
      color #000
  .row
    margin 0
    margin-bottom 10px
    padding-bottom 10px
    border-bottom 1px solid #cbcbcb
    .brand
      background #e7e7e7
      padding 10px 15px
      border-radius 3px
      a 
        margin-left: 8px
        font-weight: 700
        text-decoration: underline
      button
        margin-left 30px
        padding 3px 12px
        background-color white
        border 1px solid black
        border-radius 3px
        color #000
        font-weight 700
        font-size 12px
        transition all 0.3s ease-in-out 0s
        &:hover
          color white
          background-color black
    .share-wrapper
      padding-top 13px
      margin-left 20px
      .share
        &:hover + .share-expand
          opacity 1
      .share-expand
        opacity 0
        transition all 0.3s ease-in-out 0s
        &:hover
          opacity 1
        img
          margin-left 10px
          &:hover
            opacity .6
    .chat_btn
      color #000
      text-align left
      margin-top 10px
      font-size 11px
      padding-top 4px
      padding-left 10px
      width 100px
      height 25px
      border-radius 2px
      background #c7c7c7 url("/assets/images/speechbubble.png") 92% 5px no-repeat
      font-weight 300
      border 0
      &:hover
        color #fff
        background #3c3c3c url(/assets/images/speechbubble_hover.png) 92% 5px no-repeat
        transition all 0.3s ease-in-out 0s
  .details 
    color #000
    .title
      font-size 30px
      font-weight 600
      margin-bottom 10px
    .price
      font-weight 300
      font-size 30px
      float left
    .vat
      color #929292
      padding-top 16px
      float left
      margin-left 10px
    .delivery
      color #929292
      font-size 10px
      list-style-type none
      margin-top 10px
      line-height 1.4
      li
        &:nth-child(2)
          margin-bottom 10px
    .carousel-title
      color #000
      font-size 15px
      font-weight 700
      margin-top 15px
      text-align center
      margin-bottom 20px
      a
        text-decoration underline      
  .tabs
    .tab-pane
      font-family  "source sans pro"
      font-size  16px
      color #808080
      padding-top  20px
      padding-bottom  20px
      margin-bottom 40px
      height 200px
      background  none
      overflow  scroll
      border-bottom  1px solid #cbcbcb
      p
        font-family  "source sans pro"
  .carousels 
    margin-top 20px
    .carousel-inner
      li
        width 16.666666%
        padding 10px
        img
          width 100%
          &:hover
            border 1px solid #d8d8d8
    .carousel-control
      -ms-transform rotate(45deg) /* IE 9 */
      -webkit-transform rotate(45deg) /* Chrome, Safari, Opera */
      transform rotate(45deg)
      border 2px solid grey
      width 15px
      height 15px
      background transparent
      position absolute
      margin-top 7%
      &.left
        margin-left -25px
        border-top none
        border-right none
      &.right
        margin-right -25px
        border-bottom none
        border-left none