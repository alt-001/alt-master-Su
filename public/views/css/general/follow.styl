#follow
  display none
  position fixed
  height 100%
  width 100%
  background-color rgba(255, 255, 255, 0.85)
  z-index 131
  top 0
  left 0
  .close
    position absolute
    top 20px
    right 20px
    opacity .6
  .wrapper
    padding-top 70px
    height 700px
    width 60%
    margin auto
    font-family 'PT Sans'
    font-size 24px
    color #3b3b3b
    font-weight 700
    input[type="email"]
      border 2px solid #9f9f9f
      box-shadow none
      padding 8px 15px
      border-radius 5px
      background-color transparent
      font-family 'PT Sans'
      font-size 18px
      margin-bottom 20px
      font-weight 700
      &:focus,
      &:invalid
        color black
        box-shadow none
        -webkit-box-shadow none
        outline none
    .subscribe
      background-color rgba(175, 175, 175, .2)
      border none
      padding 8px 15px
      margin-bottom 20px
      margin-left 20px
      font-size 18px
      font-weight 700
      color #3b3b3b
      &:focus,
      &:invalid
        color black
        border none
        box-shadow none
        -webkit-box-shadow none
        outline none
      &:hover
        background-color rgba(175, 175, 175, .5)
    .title
      text-transform uppercase
      margin-bottom 40px
      padding-top 20px
      border-top 1px solid grey
      font-size 20px
      font-weight 700
     .row
       marign-left 20px 
      .social_icon
        opacity 0.5
        width 45%
        min-width 110px
        max-width 130px
        height auto
        margin-bottom 60px
        padding-left 16px
        &#weixin
          opacity .5
        &:hover
          opacity 1
          transition all 0.2s ease-in-out
