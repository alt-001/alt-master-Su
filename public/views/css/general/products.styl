#products
  li
    .product-cover
      width 100%
      background white
      opacity 0.9
      &:hover
        transition all 0.5s ease
        opacity 1
        background black
    .tag
      position absolute
      right 0
      bottom 0
      height auto
      width 100%
      padding-left 10px
      padding-right 10px
      margin-bottom 10px
      .tag-trigger
        text-align center
        cursor pointer
        bottom 0px
        left 5px
        position absolute
        z-index 9
        padding-right 100px
        padding-top 40px
      .tag-info
        visibility hidden
        position absolute
        right 0
        bottom 0
        background-color rgb(255, 255, 255)
        border 1px solid #ebebeb
        border-radius 3px
        width 100%
        float right
        font 700 1em/1.2 'PT Sans'
        color #000
        padding 15px
        text-decoration underline
        line-height 1.6
        z-index 10
        a
          color black
          font-weight 100
          text-decoration underline
        .remove
          background-color #cdcdcd
          width 20px
          height 20px
          border none
          font-size 10px
        .small-button
          background-color rgb(179, 179, 179)
          border-radius 3px
          clear both
          color rgb(255, 255, 255)
          display block
          font-size 0.75em
          font-weight 700
          letter-spacing .5px          
          line-height 1.38
          margin 10px 0 0 0
          text-align center
          border none
          width 90px
          &:hover
            transition all 0.6s ease
            background-color black
        img
          margin-top 8px
          margin-left 10px
          height 20px
          opacity 0.3
          cursor pointer
          &:hover
            transition all 0.6s ease
            opacity 1

        .shadow
          width 60%
          margin-top -20px
