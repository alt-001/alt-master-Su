#vipAccountMailDetailsContent
  margin-right 20px
  margin-left 20px
  margin-top 0
  margin-bottom 60px
  color #000
  font-size 13px
  font-family 'PT Sans'
  .menu
    padding-bottom 15px
    li
      padding-left 40px
      padding-right 35px 
      margin-top 10px
      a
        color #000
        font-weight 600
        text-decoration none
        .reply
          margin-right 10px
          display inline-block  
          height 20px
          width 22px
          padding-left 30px
          background url('/assets/images/reply.jpg') center left no-repeat
      &:first-child
        padding-right 0
      &:last-child
        padding-right 0
      select
        outline none
        border 0
        font-weight 600
        color #d3d3d3
        width 50px
        -webkit-appearance  none
        -moz-appearance  none
        text-indent  1px
        text-overflow  ''
        background  transparent url("/assets/images/shape-2.png") 107% 1px no-repeat
  .media
    img
      width 80px
    .media-body
      h4
        font-size 22px
        font-weight 600
      .title
        font-size 18px
        margin-bottom 7px
    .timestamp
      font-weight 600
      font-size 14px
      color #b4b4b4
  .messages
    li  
      height 57px
      background-color #f6f6f6
      overflow hidden
      border-bottom 2px solid #d8d8d8
      padding 10px
      width 70%
      cursor pointer
      &.show-full
        height auto
        background-color transparent
        border-bottom 0
        .desc
          font-weight 500
          color #646464
          width 100%
          margin-top 5px
          line-height 1.6
      .timestamp
        color #d3d3d3
        text-align right
        margin-bottom 0
      h4
        margin-top 0
        margin-bottom 4px
        font-weight 600
        font-size 15px
      .desc
        font-weight 100
        color #a4a4a4
        line-height 1.8
      .reply
          font-size 12px
          margin-right 10px
          text-align right
          display inline-block  
          height 20px
          background url('/assets/images/reply.jpg') 94% -2px no-repeat
  .mail-img
    img
      width 100%
      margin-bottom 45px
  textarea
    resize none
    margin-top 20px
    width 70%
    height 200px
    background-color #f6f6f6
    border 1px solid #d8d8d8
    margin-bottom 10px
    padding-left 10px
    &:focus
      outline none
      border 1px solid #d8d8d8
  .cancel
    margin-right 10px
    background-color #d3d3d3
    color grey
    border none
    padding 5px 20px
    border-radius 3px
  .submit
    background-color #202020
    color white
    border none
    padding 5px 20px
    border-radius 3px