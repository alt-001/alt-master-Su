#vip-sub
  font-family 'PT Sans'
  margin-top 10px
  padding-left 20px
  padding-right 20px
  .menu
    padding-bottom 40px
    border-bottom 1px solid #d8d8d8
    button
      border none
      padding 5px
      font-weight 700
      font-size 16px
      &.compse
        background transparent url('/assets/images/pro/icon-compose.png') center right no-repeat
        padding-right 30px
      &.addon
        height 31px
        background #e4e5e5
    input
      padding 5px
    li
      padding-left 30px
      a
        color #868686
        font-weight 600
        text-decoration none
        .trash-img
          margin-right 3px
          display inline-block  
          height 20px
          width 60px
          padding-left 25px
          background url('/assets/images/trash.jpg') 0% -5px no-repeat
        .archive
          margin-right 3px
          display inline-block  
          height 20px
          width 60px
          padding-left 25px
          background url('/assets/images/archive.png') 0% 3px no-repeat
      &:first-child
        padding-left 0
    select
      outline none
      border 0
      background-color transparent
      font-weight 600
      margin-top 5px
      width 103px
      -webkit-appearance  none
      -moz-appearance  none
      text-indent  1px
      background  transparent url("/assets/images/shape-2.png") right center no-repeat
      &.more
        width 45px
        color #868686
        background-position right center