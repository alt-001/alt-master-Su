#vipTop
  height 100px
  width 100%
  background-color #000
  font-size 15px
  color  #929292
  position fixed
  z-index 2
  font-family 'PT Sans'
  ul
    margin-top 68px
    &.dropdown-menu
      margin-top 0    
    &.list-inline
      margin-left 4%
      font-size 18px
      font-weight 700
      li
        color #fff
        font-weight 600
        a
          color  #929292
          font-size 16px
          text-decoration none
          font-weight 100
          padding 0 15px
          padding-bottom 2px
        &:active,
        :hover
          color white
          transition all 0.2s ease-in-out
        &:last-child a
            color:#fff
  .btn-group
    button
      margin-top 20px
      margin-right 20px
      color black
      text-align left
      font-size 11px
      padding-top 4px
      padding-left 10px
      width 100px
      height 25px
      border-radius 2px
      background #a0a0a0 url(/assets/images/speechbubble.png) 92% 5px no-repeat
      font-weight 300
      border 0
      &:hover
        color #fff
        background #3c3c3c url(/assets/images/speechbubble_hover.png) 92% 5px no-repeat
        transition all 0.3s ease-in-out 0s
      &.msg
        width 90px
        background #d1d1d1 url(/assets/images/pro/icon-message.png) 88% 6px no-repeat
        &:hover
          color black
          background #d1d1d1 url(/assets/images/pro/icon-message.png) 88% 6px no-repeat
          transition all 0.3s ease-in-out 0s
        &:hover .dropdown-menu
          display block
          opacity 1     
  .welcome
    margin-top:25px
    margin-right:20px
    text-align right
    b
      color #fff
      margin-left 5px
  .dropdown-menu
    border-radius:0 
    border 4px solid #000
    width 300px
    left -89%
    transition all 0.2s ease-in-out
    li
      border-bottom 1px solid #c9c9c9
      margin-top 0
      padding 5px
      padding-top 8px
      &:first-child
        padding-top 0
      &:last-child
        padding-top 0 
      a
        padding 5px
        img
          width 39px
          border 1px solid #929292                
      .media-body
        width 215px
        .media-heading
          font-family 'PT Sans'
          font-weight 700
          font-size 14px
          margin-top 10px
        .title
          font-family 'Source Sans Pro'
          font-weight 100
          font-size 14px  
          .pull-left
            margin-right:0
      p
        text-align left
        margin 0
        margin-top 10px
        margin-left 4px
        font-family 'Source Sans Pro'
        font-weight 100
        margin-bottom 10px    

      .media-heading,.date,.title
        font-size:12px
        font-weight:800
        color:#000
        margin:0
        margin-top:15px
      .title
        margin:0
        font-weight:500
      .date
        margin:0
    li.footer 
      border:0
      font-size:14px
      color:#000
      padding-left 10px
      padding-right 10px
      p
        margin:10px 0
        font-family 'PT Sans'
        font-weight:800
        &.compose
          background: url(/assets/images/pro/icon-compose.png) right center no-repeat
          padding-right 30px