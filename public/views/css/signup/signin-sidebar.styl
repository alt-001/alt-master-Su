#signin-sidebar
  position fixed
  font-family 'PT Sans' 'Source Sans Pro'
  background-color #3e3e3e
  height 100%
  overflow scroll
  padding-bottom 60px
  input
    border 1px solid #dadada
    font-size 16px
    background-color transparency
    margin 10px 6px
    margin-left 0
    padding 6px 10px
    &:hover,&:focus,&.active
      outline 0
  .login
    background-color #fdfdfd
    padding 50px
    padding-top 55px
    color #000
    font-size 20px
    font-weight 800
    padding-bottom 20px
    .login-title
      border-bottom 2px solid #ccc
      margin-bottom 10px
      padding-bottom 10px
      font-weight 700 
    .forget
      color #929292
      font-weight 100
      font-size 12px
      text-decoration underline
      margin-top 5%
      font-family 'Source Sans Pro'   
    .password-style:after,.password-style:before
      top 148px
    .submit
      margin-left 0
      border 1px solid #000
      width 90%
      color #000
      padding 3px 8px
      background-color white
      font-size 14px
      font-weight 700
      text-align center
      transition all 0.5s ease
      &:hover
        background-color black
        color white
    label
      color #929292
      font-size 12px
      font-weight 100
      input
        margin-top  15px
        font-family 'Source Sans Pro'
  .signup
    background-color #3e3e3e
    color #fff
    padding 35px
    padding-top 15px
    .title
      font-size 18px
      font-weight 700
      letter-spacing 1px
    .vip
      font-weight 700
    .member
      border-top  2px solid #626262
      border-bottom  2px solid #626262
      padding-top 15px
      padding-bottom 10px
      margin-top 10px
      margin-bottom 10px
      .social-login
        margin 0
        margin-bottom 10px
        .social
          li 
            float left
            padding-left 10px
            a 
              img
                width 22px
                height 20px
                margin-right 12px
                opacity 0.6
                transition all 0.5s ease
                &:hover
                  opacity 1         
      .local-signin
        .local-signin-title
          margin-top 15px
        input
          border 1px solid #707070
          background-color #3e3e3e
          font-weight 700
          padding-left 10px
          padding-right 5px
          width 100%
          &:invalid,&:focus,&.active
            color white
        input.fname
          margin-top 20px
          width 95%
        input.lname
          margin-top 20px
          width 95%
          margin-left 5%
        label
          font-size 12px
        .last-name-style:before
          left 5px
        label
          font-weight 100
          font-family 'Source Sans Pro'
          input
            width auto
    .vip
      padding-top 10px
      .submit
        background-color #3e3e3e
        margin 0
        border 1px solid #fff
        width 33.333%
        color #fff
        font-size 14px
        transition all 0.5s ease
        &:hover
          background-color white
          color black
      .register
        margin-top 5px
        a
          color white
          text-decoration underline