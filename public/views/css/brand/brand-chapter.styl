#brandChapter
  font-family "PT Sans"
  .info
    padding 20px 60px 80px 60px
    h3
      font-weight bold
      font-size 30px
      width 50%
      float left
    .share-wrapper
      float right
      height 20px
      margin 10px
      margin-top 40px
      &:hover .share-expand
        opacity 1
        bottom 10px
      a
        color black
        &:hover
          text-docoration none  
      .share
        font-size 14px
        position relative
        text-align right               
      .share-expand
        overflow hidden
        position absolute
        width 70px
        height 50px
        bottom 0px
        opacity 0
        transition all .2s ease-in-out
        a
          margin-right 6px
          img
            opacity 1
            &:hover
              opacity .8
    p
      font-size 18px
      font-weight 100
      margin-top 20px
      font-family "source sans pro" "PT Sans"
  #momentWrapper
    padding 20px 60px 80px 60px
    h4
      text-align center
      font-weight 700
    .carousels 
      width 100% 
      height auto
      margin auto
      margin-top 20px
      background #dadada
      #productCarousel1
        .carousel-inner
          padding 15px 7.5px
          img
            margin 0 7.5px
            width calc(20% - 15px)
            cursor pointer
            &:hover
              border 1px solid #c5c5c5
        .carousel-control
          -ms-transform rotate(45deg) /* IE 9 */
          -webkit-transform rotate(45deg) /* Chrome, Safari, Opera */
          transform rotate(45deg)
          border 4px solid grey
          width 20px
          height 20px
          background transparent
          position absolute
          margin-top 10%
          &.left
            margin-left -37px
            border-top none
            border-right none
            span
          &.right
            margin-right -37px
            border-bottom none
            border-left none
            span    
    .buy-look
      width 100% 
      margin auto
      margin-top 20px
      background #efefef
      padding 20px
      padding-bottom 25px
      button
        border-radius 2px
        background-image -moz-linear-gradient( 90deg, rgb(50,50,50) 0%, rgb(80,80,80) 100%)
        background-image -webkit-linear-gradient( 90deg, rgb(50,50,50) 0%, rgb(80,80,80) 100%)
        background-image -ms-linear-gradient( 90deg, rgb(50,50,50) 0%, rgb(80,80,80) 100%)
        box-shadow 0px 5px 0px 0px rgba(87, 87, 87, 0.294)
        width 170px
        height 46px
        border none
        font-size 18.261px
        font-family "PT Sans"
        text-shadow 2px 2px 0px rgba(255, 255, 255, 0.106)
        color white
        font-weight 700
        transition all .2s ease-in-out
        &:hover
          background #dcdcdc
          background-image -moz-linear-gradient( 90deg, rgb(78,78,78) 0%, rgb(124,124,124) 100%)
          background-image -webkit-linear-gradient( 90deg, rgb(78,78,78) 0%, rgb(124,124,124) 100%)
          background-image -ms-linear-gradient( 90deg, rgb(78,78,78) 0%, rgb(124,124,124) 100%)
      a
        margin-left 10px
        margin-top 14px
        opacity .4
        transition all .3s ease-in-out
        text-align right
        &:hover
          opacity 1
        &:hover + span
          opacity 1
          width 90px
          transition all .2s ease-in-out
      span
        margin-top 14px
        margin-left 15px
        opacity 0
        width 0
        height 20px
        overflow hidden
        a
          margin-left 12px
      .share-wrapper
        width 260px
        float right
        &:hover > span
          opacity 1
          width 180px