#brand-sidebar  
  height 100%
  background #f6f6f6
  padding 40px
  padding-left 30px
  left 0
  font-family  'PT Sans'
  font-weight bold
  color  #000
  position fixed
  width inherit
  z-index 999
  .title 
    font-size 30px
    margin-top 20%
    text-align right
    font-weight 700
  .misc
    margin 15px 0
    margin-top 30px
    a 
      margin-right 10px
      font-size 12px
      color #929292
      text-decoration none     
      &.follow
        padding  5px 15px
        margin-right 0
        margin-left 10px
        letter-spacing .5px
        color #000
        border 1px solid #000
        float right
        transition all .2s ease-in-out
        border-radius 5px
        &:hover
          color white
          background-color black
      &.message
        padding  12px
        padding-left 11px
        font-size 0
        border 1px solid #b4b4b4
        background url('/assets/images/speechbubble-small.png') center center no-repeat #efefef
        border-radius 50%
        &:hover
          background-color black
    .share-wrapper
        float left
        margin-top 3px
        &:hover .share-expand
          opacity 1
          bottom 25px
      .share
        font-size 14px
        position relative
        width 60px
        height 60px
        padding-right 20px
        border-right 1px solid 
        font-weight 100               
      .share-expand
        overflow hidden
        position absolute
        bottom 10px
        opacity 0
        transition all .2s ease-in-out
        a
          img
            opacity .5
            &:hover
              opacity 1   
  .brand-info
    font-size 14px
    padding 15px 0
    font-weight lighter
    border-bottom 1px solid #ccc
    border-top 1px solid #ccc
    text-align left
    color #646464
  .brand-menu
    padding-top 40px
    ul
      list-style-type none
      text-align right
      margin-right -40px
      li
        padding 8px 0
        padding-right 40px
        margin-bottom 10px
        background url('/assets/images/icons-100.png') 140% center no-repeat #f6f6f6
        transition all .5s ease-in-out
        &:hover
          background url('/assets/images/icons-100.png') right center no-repeat #f6f6f6
        &.active
          background url('/assets/images/icons-100.png') right center no-repeat #f6f6f6
          a
            color #000
        a
          color #929292
          font-size: 22px
          font-weight normal
          padding 10px 0
          text-decoration none
          &:hover
            color:#000
        #productExpand
          position absolute
          width 200px
          margin-top -43px
          right 120px 
          z-index 0         
          li
            padding 6% 0
            display inline-block
            margin-right 10%
            background transparent
            &:first-child
              margin-right 13%
            &:nth-child(2)
              background url('/assets/images/shape.png') center right no-repeat
              padding-right 20px
            a
              color #a8a8a8
              &:hover
                color black         
    .product-tab
      width 250px
      li
        float left
        transition none 
        &.all.onshow
          background: url('/assets/images/shape.png') center center no-repeat 
        &.featured.onshow
          background: url('/assets/images/shape.png') 72% center no-repeat          
          &.featured.onshow
            background-position 92px center